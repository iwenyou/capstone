<div class="container">
  <form>
    <div class="form-group row">
      <label for="first_name" class="col-sm-2 col-form-label col-form-label-lg">First Name: </label>
      <div class="col-sm-10">
        <input class="form-control form-control-lg" id="first_name" placeholder="input your first name">
      </div>
    </div>

    <div class="form-group row">
      <label for="last_name" class="col-sm-2 col-form-label col-form-label-lg">Last Name: </label>
      <div class="col-sm-10">
        <input class="form-control form-control-lg" id="last_name" placeholder="input your last name">
      </div>
    </div>

    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control form-control-lg" id="email" placeholder="input your email">
      </div>
    </div>

    <div class="form-group row">
      <label for="password" class="col-sm-2 col-form-label col-form-label-lg">Password: </label>
      <div class="col-sm-10">
        <input type="password" class="form-control form-control-lg" id="password" placeholder="input your password">
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Regster</button>
  </form>
</div>
